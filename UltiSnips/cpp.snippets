# snippet file_information
# /* file: $1.cpp */
# /* author: Levi Moes (email: l.moes.2@student.rug.nl) */
# /* date: `date +%F` */
# /* version: 1 */
# /* Description: $2 */
# endsnippet

snippet out "output"
std::cout << $1;
endsnippet

snippet print "output string"
std::out << $1 << '\n';
endsnippet

snippet for "canonical for loop"
for (${1:i} = ${2:0}; $1 ${5:!=} ${3:42}; ${4:++i})
{
	$5
}
endsnippet

snippet forarr "Range based for loop"
for (auto ${1:&element}: ${2:array})
{
	$3
}
endsnippet

snippet fori "for loop with declaration"
for (${1:/size_t/int/long} ${2:i} = ${3:0}; $2 ${6:!=} ${4:42}; ${6:++i})
{
	$6
}
endsnippet

snippet while "General While loop" b
while ($1)
{
	$2
}
endsnippet

snippet "do while" "do while"
do
{
	$1
}
while ($2)
endsnippet

snippet if "If statement"
if ($1)
{
	$2
}
endsnippet

snippet ifa "If statement with init"
if (${1:init}; $2)
{
	$3
}
endsnippet

snippet elif "else if"
else if ($1)
{
	$2
}
endsnippet

snippet main "Put iostream and main"
#include <iostream>
$1

int main(int argc, char *argv[])
{
	$2
}
endsnippet

snippet inc "include"
#include <$1>
endsnippet

snippet array "array definition"
	int $1[$2] = {$3};
endsnippet

snippet function "function definition"
${1:int/bool/long/std::vector} $2($3)
{
	$4
}
endsnippet

snippet namesp(ace) "use namespace"
using namespace ${1: std};
endsnippet

snippet rsl "Raw String Literal"
std::string $1 = R"$2($3)$2)";
endsnippet
